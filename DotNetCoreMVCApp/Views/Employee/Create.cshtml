@model Employee
@{
     ViewData["Titel"] = "Create";
}
<a asp-action="Index">View all Employees</a>
<div class="container">
    <h2> Create Employee</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2">Name:</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="form-label">Age:</label>
            <div class="col-sm-10">
                <input asp-for="Age" class="form-control" />
            </div>
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Salary" class="form-label">Salary:</label>
            <div class="col-sm-10">
                <input asp-for="Salary" class="form-control" />
            </div>
        </div><div class="form-group">
            <label asp-for="Department" class="form-label">Department:</label>
            <div class="col-sm-5">
                <select asp-for="Department" class="form-control">

                    <option value="HR">HR</option>
                    <option value="Development">Development</option>
                    <option value="Research">Research</option>
                </select>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label asp-for="Gender" class="form-label">Gender  </label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Gender" type="radio" value="M" />
                <label class="form-check-label" asp-for="Gender">
                    Male
                </label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" asp-for="Gender" type="radio" value="F" />
                <label class="form-check-label" asp-for="Gender">
                    Female
                </label>
            </div>

            <span asp-validation-for="Gender"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>



    </form>
</div>


