@model IEnumerable<Employee>
@{
    ViewData["Titel"] = "Index";
}
<h3>Employee List</h3>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr>
                <th>EId</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Department</th>
                <th>Gender</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Employee item in Model)
            {

                <tr style="border-bottom: 1px">
                    <th>@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.Age</th>
                    <th>@item.Salary</th>
                    <th>@item.Department</th>
                    <th>@item.Gender</th>
                    <th><a asp-action="Update" asp-route-id="@item.Id">Update</a></th>
                    <th><a asp-route-id="@item.Id" asp-action="Delete">Delete</a></th>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Create">Create an Employee</a>

